{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"]
    }
  },
  "include": [
    "src/main/**/*",
    "src/core/**/*.ts"
  ],
  "exclude": [
    "src/renderer/**/*",
    "**/*.test.ts",
    "**/*.pbt.test.ts",
    "**/*.integration.test.ts"
  ]
}