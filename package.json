{
  "name": "arc-browser",
  "version": "1.2.0",
  "description": "Arc Browser - Electron + React + TypeScript",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development tsc -p tsconfig.main.json && electron dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:accessibility": "node scripts/run-accessibility-audit.js",
    "test:a11y": "npm run test:accessibility",
    "audit:accessibility": "npm run test -- src/core/accessibilityAuditor.test.ts --run",
    "test:performance": "vitest run src/test/performance/performanceBenchmarks.test.ts",
    "benchmark": "npm run build:main && node dist/test/performance/runBenchmarks.js",
    "benchmark:dev": "ts-node src/test/performance/runBenchmarks.ts",
    "performance:profile": "npm run build:main && node --inspect dist/test/performance/runBenchmarks.js",
    "performance:memory": "npm run build:main && node --max-old-space-size=512 dist/test/performance/runBenchmarks.js",
    "performance:optimize": "npm run build:main && node dist/core/performance/optimizeApp.js",
    "rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "rebuild:all": "npx electron-rebuild -f",
    "package": "electron-builder --dir --publish=never",
    "package:installer": "electron-builder",
    "package:simple": "electron-packager . arc-browser --platform=win32 --arch=x64 --out=release --overwrite",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.1.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "fast-check": "^3.23.2",
    "jsdom": "^22.1.0",
    "typescript": "^5.1.0",
    "vite": "^4.4.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0"
  },
  "author": "Arc Browser Team",
  "build": {
    "appId": "com.arc.browser",
    "productName": "Arc Browser",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "portable",
      "certificateFile": null,
      "certificatePassword": null,
      "sign": null
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
